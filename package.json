{
  "name": "project-echo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build:css": "tailwindcss -i ./src/tw.css -o ./public/tw.css --minify",
    "build": "npm run build:css",
    "dev:css": "tailwindcss -i ./src/tw.css -o ./public/tw.css --watch",
    "dev:server": "nodemon --verbose --watch server.js --watch public --ext js,json,html --signal SIGTERM --exec \"node --enable-source-maps server.js\"",
    "dev": "concurrently -k --success=first -n SERVER,CSS -c blue,magenta \"npm:dev:server\" \"npm:dev:css\""
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@supabase/supabase-js": "2.58.0",
    "axios": "1.12.2",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-rate-limit": "6.11.2",
    "form-data": "4.0.4",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "nodemailer": "^7.0.10",
    "stripe": "19.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "engines": {
    "node": "20.x"
  }
}
